// C++ code
//
void setup()
{
  pinMode(A0, INPUT);
  pinMode(9, OUTPUT);
  pinMode(8, OUTPUT);
  pinMode(7, OUTPUT);
}

void loop()
{
  delay(1000); // Wait for 1000 millisecond(s)
  if ((-40 + 0.488155 * (analogRead(A0) - 20)) >= 30) {
    digitalWrite(9, HIGH);
  }
  if ((-40 + 0.488155 * (analogRead(A0) - 20)) >= 50) {
    digitalWrite(8, HIGH);
    digitalWrite(7, HIGH);
  } else {
    digitalWrite(9, LOW);
    digitalWrite(8, LOW);
    digitalWrite(7, LOW);
  }
}
